# Environment Configuration
NODE_ENV=development  # possible values: development, production
PORT=3000  # default server port

DATABASE_URL=mongodb+srv://<username>:<password>@cluster0.<cluster-id>.mongodb.net/<database-name>?retryWrites=true&w=majority

# JWT Configuration
JWT_ACCESS_SECRET=<32-character-random-string>  # used to sign access tokens
JWT_ACCESS_EXPIRES_IN=1h  # e.g., 1h (1 hour), 30m (30 minutes)
JWT_REFRESH_SECRET=<32-character-random-string>  # used to sign refresh tokens
JWT_REFRESH_EXPIRES_IN=7d  # e.g., 7d (7 days), 30d (30 days)

# Bcrypt Configuration
BCRYPT_SALT_ROUND=10  # default is 10, higher for more security

# Reset Password UI Link
RESET_PASS_UI_LINK=https://your-frontend-app.com/reset-password  # link to reset password page

# Payment Gateway (example: SSLCommerz, Stripe, etc.)
STORE_ID=<your-store-id>  # unique ID provided by payment gateway
STORE_PASSWD=<your-store-password>  # password provided by payment gateway
IS_LIVE=false  # set to true for live environment

# Server & Client URLs
SERVER_URL=https://your-backend-url.com
CLIENT_URL=https://your-frontend-url.com

# Free Content Access
FREE_CONTENT_ACCESS_SECRET=<32-character-random-string>  # for restricted free content access

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=<your-cloud-name>  # found in Cloudinary dashboard
CLOUDINARY_API_KEY=<your-api-key>  # API key from Cloudinary
CLOUDINARY_API_SECRET=<your-api-secret>  # API secret from Cloudinary
